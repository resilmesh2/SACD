{
  "name": "sentinel-layout",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint && npm run prettier-check",
    "prettier-check": "prettier --check \"projects/**/*.{html, css,ts}\"",
    "prettier-fix": "prettier --write \"projects/**/*.{html, css,ts}\"",
    "e2e": "ng e2e",
    "ci-e2e": "ng e2e",
    "ci-test": "ng test --browsers ChromeHeadless --watch=false",
    "build-example-app": "ng build sentinel-layout-example-app --configuration production",
    "build-library": "ng build sentinel-layout --configuration production",
    "build-schematics": "cd projects/sen  tinel-layout && npm run build && cd ../../ && npm link dist/sentinel-layout",
    "create-package": "cd dist/sentinel-layout && npm pack",
    "build-and-pack": "npm install --legacy-peer-deps && npm run build-library && npm run create-package",
    "ci-update-version": "cd ./projects/sentinel-layout/ && npm version $TAG_VERSION",
    "ci-build-and-pack": "npm ci --cache .npm --prefer-offline && npm run build-library && npm run create-package",
    "ci-publish-package": "cd dist/sentinel-layout && npm publish",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.1.0",
    "@angular/cdk": "^18.1.0",
    "@angular/common": "^18.1.0",
    "@angular/compiler": "^18.1.0",
    "@angular/core": "^18.1.0",
    "@angular/forms": "^18.1.0",
    "@angular/material": "^18.1.0",
    "@angular/platform-browser": "^18.1.0",
    "@angular/platform-browser-dynamic": "^18.1.0",
    "@angular/router": "^18.1.0",
    "@apollo/client": "^3.11.10",
    "@sentinel/common": "^18.0.0",
    "@swimlane/ngx-charts": "^21.0.0",
    "@swimlane/ngx-graph": "^8.0.0-rc.1",
    "apollo-angular": "^8.0.0",
    "d3": "^5.15.0",
    "graphql": "^15.4.0",
    "lodash": "^4.17.20",
    "ngx-indexed-db": "^19.0.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "^0.14.6"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1801.0",
    "@angular-devkit/build-angular": "^18.1.0",
    "@angular-devkit/core": "^18.1.0",
    "@angular-devkit/schematics": "^18.1.0",
    "@angular-eslint/builder": "^18.1.0",
    "@angular-eslint/eslint-plugin": "^18.1.0",
    "@angular-eslint/eslint-plugin-template": "^18.1.0",
    "@angular-eslint/template-parser": "^18.1.0",
    "@angular/cli": "^18.1.0",
    "@angular/compiler-cli": "^18.1.0",
    "@angular/language-service": "^18.1.0",
    "@nrwl/cypress": "^19.4.3",
    "@nrwl/workspace": "^19.4.3",
    "@schematics/angular": "^18.1.0",
    "@types/d3": "^7.4.3",
    "@types/dagre": "^0.7.52",
    "@types/jasmine": "~5.1.4",
    "@types/jasminewd2": "~2.0.13",
    "@types/lodash": "^4.17.13",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.12",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "cypress": "^9.7.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jasmine-core": "~5.1.2",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "ng-packagr": "^18.1.0",
    "nx": "^19.0.7",
    "prettier": "3.2.5",
    "ts-node": "~10.9.2",
    "typescript": "~5.5.4"
  }
}
