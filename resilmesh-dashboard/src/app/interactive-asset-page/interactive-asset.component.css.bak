/* Styling the search-filter container */
.searchFilter {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin: 16px 0;
}

:host {
    width: 100%;
}

.search-filter {
    display: flex;
    flex-direction: row;
}

.search-filter .mat-form-field {
    width: 400px;
}

button:enabled {
    background-color: #1a237e;
    color: #f1f2f2;
    cursor: pointer;
}

:host ::ng-deep .mat-form-field-appearance-outline .mat-form-field-outline {
    background-color: #fff;
}

/* Input field styling */
.search-input {
  flex: 1;
  margin-right: 8px;
}

/* Button styling */
.search-button {
  height: 56px;
  min-width: 100px;
  top: 4px;
  margin-left: 25px;
}

/* Visualisation container styling */
.visualisation-container {
  width: 100%;
  height: calc(100vh - 100px); /* Adjusted height for responsiveness */
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0;
  border: 1px solid #ccc;
  position: relative;
}

/* Cytoscape container */
.cy-container {
  width: 100%;
  height: 100%;
  border: 1px solid #ccc;
}

/* No data message styling */
.no-data-message {
  color: #888;
  font-size: 18px;
  text-align: center;
  position: absolute;
}
